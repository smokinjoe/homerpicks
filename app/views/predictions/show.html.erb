<div class="row">
  <div class="col-md-4 col-md-offset-4">
    <h2>Prediction</h2>

    <dl class="dl-horizontal">
      <dt>Team</dt><dd><%= @prediction.team %></dd>
      <dt>Wins</dt><dd><%= @prediction.wins %></dd>
      <dt>Losses</dt><dd><%= @prediction.losses %></dd>
      <dt>Most home runs</dt><dd><%= @prediction.tiebreaker %></dd>
    </dl>

    <%= link_to 'Edit', edit_prediction_path(@prediction) %>
  </div>
</div>