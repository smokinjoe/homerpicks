<%= simple_form_for(@prediction, html: { class: "form-horizontal" }) do |f| %>
  <% if @prediction.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@prediction.errors.count, "error") %> prohibited this prediction from being saved:</h2>

      <ul>
      <% @prediction.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
      
    </div>
  <% end %>

  <%= f.input :team, :type => :text, label: "Team Name", required: true, input_html: { class: 'form-control' } %>
  <%= f.input :wins, label: "Wins", required: true, input_html: { class: 'form-control' } %>
  <%= f.input :losses, label: "Losses", required: true, input_html: { class: 'form-control' } %>
  <%= f.input :tiebreaker, label: "Who hits the most home runs this year?", required: true, input_html: { class: 'form-control' } %>
    
  <div class="actions">
    <%= f.submit class: "btn btn-default" %>
  </div>
<% end %>
