<div class="row">
  <div class="col-md-4 col-md-offset-4">
    <h2>Resend confirmation instructions</h2>

    <%= simple_form_for(resource, :as => resource_name, :url => confirmation_path(resource_name), :html => { :method => :post, :class => 'form-horizontal' }) do |f| %>
      <%= devise_error_messages! %>
      <%= f.input :email, autofocus: true, type: :email, required: true, input_html: { class: 'form-control' } %>

      <div class="actions">
        <%= f.submit "Resend confirmation instructions", class: "btn btn-default" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>