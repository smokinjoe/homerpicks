<div class="row">
  <div class="col-md-4 col-md-offset-4">
    <h2>Change your password</h2>

    <%= simple_form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :put, :class => 'form-horizontal' }) do |f| %>
      <%= devise_error_messages! %>
      <%= f.hidden_field :reset_password_token %>
      <%= f.input "New password", :password, type: :password, required: true, autofocus: true, input_html: { class: 'form-control' } %>
      <%= f.input "Confirm password", :password_confirmation, type: :password, required: true, input_html: { class: 'form-control' } %>
      <div class="actions">
        <%= f.submit "Change my password", class: "btn btn-default" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>