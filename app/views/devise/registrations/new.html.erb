<div class="row">
  <div class="col-md-4 col-md-offset-4">
    <h2>Sign up</h2>

    <%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :class => 'form-horizontal' }) do |f| %>
      <%= devise_error_messages! %>
      <%= f.input :display_name, autofocus: true, type: :text, required: true, input_html: { class: 'form-control' } %> 
      <%= f.input :email, type: :email, required: true, input_html: { class: 'form-control' } %>
      <%= f.input :password, type: :password, required: true, input_html: { class: 'form-control' } %>
      <%= f.input :password_confirmation, type: :password, required: true, input_html: { class: 'form-control' } %>
      <div class="actions">
        <%= f.submit "Sign up", class: "btn btn-default" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>