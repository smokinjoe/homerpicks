<div class="row">
  <div class="col-md-4 col-md-offset-4">
    <h2>Sign in</h2>

    <%= simple_form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => { class: 'form-horizontal' }) do |f| %>
      <%= f.input :email, autofocus: true, type: :email, required: true, input_html: { class: 'form-control' } %>
      <%= f.input :password, type: :password, required: true, input_html: { class: 'form-control' } %>
      <% if devise_mapping.rememberable? %>
        <%= f.input :remember_me, label: 'Remember me?', as: :boolean %>
      <% end %>
      <div class="actions">
        <%= f.submit class: "btn btn-default" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>